.outcome-box
  .card.text-center.card-outline-primary
    .card-header.heading-bk
      %h4.card-title
        = "You scored #{@result[:percentage]}%! - "
        = @outcome.title
    .card-block
      = image_full @outcome.image, class: "img-fluid rounded  mx-auto d-block"
      = img_reference(@outcome.image)
    .card-block
      .card-text
        = @outcome.description
    .card-footer.text-center
      -unless @preview
        = button_tag 'Share on facebook!', style: 'button', onclick: "Social.share(this)", class:"btn btn-primary", data:{ 's-href': request.original_url, 's-redirect-url': quiz_url(@quiz) }
      -if @preview
        = link_to 'Play Again! ', preview_quiz_path(@quiz), class: "btn"
      -else
        = link_to "Play Again!", quiz_path(@quiz), class: "btn"

