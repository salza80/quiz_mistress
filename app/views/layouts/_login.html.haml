.float-right
  %ul.navbar-nav
    -if current_user
      %li.nav-item
        = link_to edit_users_path, class: 'nav-link'  do
          = image_tag current_user.avatar.url, alt: current_user.name, title: current_user.name ,class: 'img rounded-circle', height: 30, width:30
      %li.nav-item=link_to 'Logout', destroy_user_session_path, :method => :delete, class: 'nav-link'
    -else
      %li.nav-item=link_to 'Register', new_user_registration_path, class: 'nav-link'
      %li.nav-item=link_to 'Login', new_user_session_path, class: 'nav-link' 
