#message
  - flash.each do |key, value|
    - if key == 'notice'
      #info.alert.alert-info{:role => "alert"}
        = value
        %button(type='button' class='close' data-dismiss='alert' aria-label='Close')
          %span(aria-hidden='true') &times;
    - if key == 'alert'
      #notice.alert.alert-warning{:role => "alert"}
        = value
        %button(type='button' class='close' data-dismiss='alert' aria-label='Close')
          %span(aria-hidden='true') &times;
