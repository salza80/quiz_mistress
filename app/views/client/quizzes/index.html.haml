%h3 
  My Quizzes
=link_to 'Add New Quiz', new_client_quiz_path, class: 'btn btn-primary'
.quiz-list
  %ul.list-group
    - @quizzes.each do |quiz|
      %li.list-group-item.list-group-item-action
        .row
          .col-md-2
            = image_full quiz.image
          .col-md-4
            = quiz.title
          .col-md-4
            No Questions:
            = quiz.questions.count
          .col-md-2
            = link_to 'Edit', client_quiz_path(quiz) 
            = link_to 'Preview', quiz_path(quiz, preview:true)
            = link_to 'Publish', client_publish_quiz_path(quiz), method: :patch, remote:true
            = link_to 'Remove', client_quiz_path(quiz), data: {confirm: 'Are you sure?'}, method: :delete
