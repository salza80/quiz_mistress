%li.list-group-item.list-group-item-action
  .row
    .col-md-7
      = f.label  :title, class: "sr-only"
      = f.text_field :title, class: "form-control", required: true, placeholder: "Answer Text"
      = f.hidden_field :_destroy
      = f.hidden_field :id
    .col-md-4
      = f.label :points
      = f.number_field :points, class: "form-control", required: true
    .col-md-1
      = link_to_remove_association  f, { wrapper_class: 'answer', class: "btn btn-default" } do
        %span.fa.fa-times
    
