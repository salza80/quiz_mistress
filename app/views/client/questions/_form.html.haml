= form_for [:client, @quiz, @question_form], html:{ multipart: :true }, authenticity_token: true, class: 'project', remote: true  do |f|
  - if @question_form.errors.any?
    #error_explanation
      %h4= "#{pluralize(@question_form.errors.count, "Fehler")}:"
      %ul
        - @question_form.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :title, class: "col-sm-2"
    .col-sm-10
      = f.text_field :title, class: "form-control", required: true
  .form-group
    = f.label :description, class: "col-sm-2"
    .col-sm-10
      = f.text_field :description, class: "form-control"
  .form-group
    = f.label :order_by, class: "col-sm-2"
    .col-sm-10
      = f.number_field :order_by, class: "form-control"
  =f.fields_for :image do |ff|
    =render partial:'image_form', locals: { f: ff }
  .actions
    = f.submit 'Save', class: "btn btn-primary"
